<?xml version="1.0"?>
<odoo>
<!--eerste view -->

<record id="estate_property_view_tree" model="ir.ui.view">
    <field name="name">estate.property.view.tree</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <tree string="Tests">
            <field name="name"/>
            <field name="last_seen"/>
        </tree>
    </field>
</record>



<!--eerste action -->

<record id="estate_property_action" model="ir.actions.act_window">
    <field name="name">estate.property.action</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
       een beetje helptekst
       </p><p>
       Use lost reasons to explain why an opportunity is lost.
       </p><p>
       Some examples of lost reasons: "We don't have people/skill", "Price too high"
        </p>
    </field>
</record>


<record id="estate_property_action_search" model="ir.ui.view">
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <search string="property naaaaam">
            <field name="name" string="naam" />
            <field name="property_name"/>
            <separator/>
            <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            <group expand="1" string="Group By">
                <filter string="Garden" name="garden" context="{'group_by':'property_garden', 'residual_visible':True}"/>
            </group>
        </search>
    </field>
</record>



</odoo>